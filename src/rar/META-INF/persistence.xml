<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd" version="1.0">

    <persistence-unit name="test">
    <properties>
	    <property name="datanucleus.connection.resourceType" value="JTA"/>
	    <property name="datanucleus.storeManagerType" value="rdbms"/>
	    <property name="datanucleus.schema.autoCreateAll" value="true"/>	    	    
	    <property name="javax.jdo.option.ConnectionFactoryName" value="jdbc_1"/>
	    <property name="javax.jdo.option.ConnectionDriverName" value="oracle.jdbc.driver.OracleDriver"/>
	    <property name="javax.jdo.option.ConnectionURL" value="jdbc:oracle:thin:@localhost:1521:XE"/>
	    <property name="javax.jdo.option.ConnectionUserName" value="test"/>
	    <property name="javax.jdo.option.ConnectionPassword" value="password"/>
    </properties>
    </persistence-unit>

</persistence>